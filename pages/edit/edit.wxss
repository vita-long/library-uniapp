/* pages/edit/edit.wxss */
.form-item {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

input {
  height: 80rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.cover-upload {
  position: relative;
  width: 300rpx;
  height: 400rpx;
}

.preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.upload-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: white;
  text-align: center;
  padding: 10rpx;
  font-size: 24rpx;
}

.submit-btn {
  margin-top: 50rpx;
  background: #07c160;
  color: white;
}

.submit-btn-hover {
  opacity: 0.8;
}